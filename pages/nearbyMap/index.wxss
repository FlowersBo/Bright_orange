/* pages/nearbyMap/index.wxss */
@import "index.skeleton.wxss";
page {
  height: 100%;
}
.gotomap{
  float: right;
  margin-right: 20rpx;
}
.nearbyListWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nearbyList {
  width: 710rpx;
  height: 194rpx;
  display: flex;
  justify-content: space-between;
  padding: 34rpx 10rpx 34rpx 30rpx;
  margin-top: 20rpx;
  /* border: 1rpx solid #ddd; */
  border-radius: 10rpx;
  box-shadow: 3px 3px 5px #ddd;
  background-color: #fff;
}

.nearbyLogo {
  width: 136rpx;
  height: 136rpx;
  margin-right: 18rpx;
}

.nearbyLogo image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.nearbyContent {
  flex: 1;
  min-width: 0;
}

.nearby_stationWrap{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nearby_station {
  width: 60%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 32rpx;
  color: #333333;
  font-family: Hiragino Sans GB;
  font-weight: bold;
}
.distance{
  font-size: 28rpx;
}
.nearby_address {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding-top: 16rpx;
  line-height: 32rpx;
  font-size: 26rpx;
  font-family: Hiragino Sans GB;
  font-weight: normal;
  color: #333333;
}

/* 模态框 */

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 660rpx;
  height: 400rpx;
  /* background-color: #0042BB; */
  background-image: linear-gradient(90deg, #0042BB, #8b62bb);
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -300rpx 45rpx 0 45rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.drawer_box_content {
  width: 600rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
}
.drawer_box_contentText{
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.authorization_title{
  font-size: 36rpx;
  font-weight: bold;
}
.authorization_content{
  text-indent: 42rpx;
}
.btnWrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.drawer_box_btn {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(90deg, #FE882E, #FCB918);
  /* background-color: #FEA91F; */
  color: #fff;
  font-size: 36rpx;
}

/* icon */
.iconWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 300rpx;
}
.iconNone{
  display: none;
}
.icon{
  font-size: 400rpx;
  color: #3C77E4;
}
.icon_text{
  color: #8a9219;
}